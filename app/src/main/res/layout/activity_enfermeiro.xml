<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EnfermeiroActivity">

    <!-- ðŸ”¹ Fundo gradiente -->
    <pt.ipleiria.estg.dei.emergencysts.GradientView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- ðŸ”¹ Toolbar transparente sobre o gradiente -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        app:navigationIcon="@drawable/ic_voltaratras"
        app:navigationIconTint="@android:color/white"/>

    <!-- ðŸ”¹ ConteÃºdo rolÃ¡vel -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- ðŸ”¹ ConteÃºdo principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="32dp"
            android:paddingTop="64dp"
            android:paddingBottom="24dp">

            <!-- ðŸ”¸ TÃ­tulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/emergency_sts"
                android:textColor="#006400"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- ðŸ”¸ SubtÃ­tulo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="@string/area_do_enfermeiro"
                android:textColor="#006400"
                android:textSize="14sp" />

            <!-- ðŸ”¸ CartÃ£o: Mostrar Pulseiras -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMostrarPulseira"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="28dp"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_mostrar_pulseira"
                        app:tint="#009E4D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mostrar_pulseira"
                        android:textColor="#009E4D"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¸ CartÃ£o: Consultar Paciente -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardConsultarPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="28dp"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_consultar_paciente"
                        app:tint="#009E4D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/consultar_paciente"
                        android:textColor="#009E4D"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¸ CartÃ£o: HistÃ³rico Triagem -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardHistoricoTriagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="28dp"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_historico"
                        app:tint="#009E4D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/historico_triagem"
                        android:textColor="#009E4D"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ðŸ”¸ CartÃ£o: Perfil -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="28dp"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginBottom="8dp"
                        android:src="@drawable/ic_perfil"
                        app:tint="#009E4D" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/perfil"
                        android:textColor="#009E4D"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
