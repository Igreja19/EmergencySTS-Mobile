<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PacienteActivity">

    <!-- ðŸ”¹ Fundo gradiente -->
    <pt.ipleiria.estg.dei.emergencysts.GradientView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- ðŸ”¹ ConteÃºdo principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- ðŸ”¸ TÃ­tulo -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/emergency_sts"
            android:textColor="#006400"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- ðŸ”¸ SubtÃ­tulo -->
        <TextView
            android:id="@+id/tvSubtitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/area_do_paciente"
            android:textColor="#006400"
            android:textSize="14sp" />

        <!-- ðŸ”¸ CartÃ£o: Ver Pulseira -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPulseira"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="28dp"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_pulseira"
                    app:tint="#009E4D" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ver_pulseira"
                    android:textColor="#009E4D"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ”¸ CartÃ£o: Ver HistÃ³rico -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHistorico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="28dp"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_historico"
                    app:tint="#009E4D" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ver_historico"
                    android:textColor="#009E4D"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ”¸ CartÃ£o: Ver Perfil -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="28dp"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_perfil"
                    app:tint="#009E4D" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ver_perfil"
                    android:textColor="#009E4D"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>
